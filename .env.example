# Copy to .env and adjust
# PostgreSQL database connection string (e.g., from Neon or Supabase)
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# WhatsApp in international format, digits only. Example: 5569993471428
WHATSAPP_NUMBER="5569993471428"

# Optional: enforce Origin check in API. Example: https://seu-dominio.com
# APP_ORIGIN="http://localhost:3000"


# Upstash Redis for rate limiting
# Get these from https://console.upstash.com/redis/YOUR_REDIS_DB/overview
UPSTASH_REDIS_REST_URL="https://[YOUR_REDIS_URL]"
UPSTASH_REDIS_REST_TOKEN="[YOUR_REDIS_TOKEN]"

# Delivery fee in cents (R$ 5,00 = 500). If PROMO_FREE_DELIVERY=true, fee becomes 0.
DELIVERY_FEE_CENTS="500"
PROMO_FREE_DELIVERY="true"
