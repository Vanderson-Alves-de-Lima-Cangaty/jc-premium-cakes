generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Order {
  id            String   @id @default(cuid())
  code          String   @unique
  createdAt     DateTime @default(now())
  totalCents    Int
  currency      String   @default("BRL")
  payloadJson   String
  customerName  String?
  address       String?
  deliveryMethod String
  paymentMethod String
  status        String   @default("created")
}
